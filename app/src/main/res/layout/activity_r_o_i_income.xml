<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_new"
    android:orientation="vertical">
  <!-- TODO: Update blank fragment layout -->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/grey"
      android:gravity="center"
      android:text="Income Details"
      android:textColor="@color/golden"
      android:textStyle="bold"
      android:visibility="gone" />
  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="50dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        tools:ignore="NewApi">
      <RelativeLayout
          android:id="@+id/header"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/purple_500">
        <ImageView
            android:id="@+id/menuImg"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:tint="@color/golden"
            android:src="@drawable/ic_arrow_back" />
        <TextView android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/menuImg"
            android:gravity="center_vertical"
            android:text="Trading Income"
            android:textColor="@color/golden"
            android:textSize="20dp"
            android:textStyle="bold" />
      </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
      android:id="@+id/ll_customerheader"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/red"
      android:padding="14dp"
      android:orientation="horizontal">
    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="SR.No."
        android:layout_marginRight="3dp"
        android:textColor="@color/white"
        android:textSize="14dp" android:gravity="center"
        android:textStyle="bold" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Date"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Income"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />
  </LinearLayout>
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/history_rec"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>

