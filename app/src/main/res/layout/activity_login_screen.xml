<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mail_rl"
    android:background="@drawable/back_new">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:textSize="28dp"
                    android:visibility="gone"
                    android:text="Customer \n SignIn"
                    android:textColor="@color/golden"
                    android:textStyle="bold" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ED025B9A"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Login Here\nLogin to continue to Team Of Traders."
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/golden" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:text="User Name" android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Username"
                            android:paddingLeft="15dp"
                            android:textColor="@color/black"
                            android:id="@+id/user_name_et"
                            android:textColorHint="@color/grey"
                            android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp" android:textStyle="bold"
                            android:text="Password"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"/>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            app:passwordToggleEnabled="true"

                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Password"
                                android:paddingLeft="15dp"
                                android:inputType="textPassword"

                                android:textColor="@color/black"
                                android:id="@+id/pass_et"
                                android:textColorHint="@color/grey"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:id="@+id/forget_tv"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Forget Password ?"
                            android:textColor="@color/red"/>


                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_login"
                                android:layout_width="250dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/rectangle_red"
                                android:text="Login" android:textSize="20dp"
                                android:textAllCaps="false"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/btn_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="Don't have account? Create New account"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:elevation="20dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/golden"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>
    </ScrollView>

</RelativeLayout>