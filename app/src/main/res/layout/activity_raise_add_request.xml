<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_new"
    android:orientation="vertical">
  <!-- TODO: Update blank fragment layout -->
  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="50dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        tools:ignore="NewApi">
      <RelativeLayout
          android:id="@+id/header"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/purple_500">
        <ImageView
            android:id="@+id/menuImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:tint="@color/golden"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/menuImg"
            android:gravity="center_vertical"
            android:text="Raise Add Request"
            android:textColor="@color/golden"
            android:textSize="20dp"
            android:textStyle="bold" />
      </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
      android:orientation="vertical"
        android:layout_height="wrap_content">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="10dp"
          app:cardElevation="5dp"
          android:padding="5dp"  android:id="@+id/mail_ll"
          app:cardBackgroundColor="@color/black"
          android:layout_margin="5dp"
          android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">

        <RadioGroup
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rdGroup"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center">
          <RadioButton  android:textColor="@color/white"
              android:id="@+id/btc" android:visibility="gone"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="BTC"
              android:checked="true"
              android:onClick="onRadioButtonClicked"/>
          <RadioButton
              android:id="@+id/eth" android:visibility="gone"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:textColor="@color/white"

              android:text="ETH"
              android:onClick="onRadioButtonClicked"/>
          <RadioButton  android:textColor="@color/white"
              android:id="@+id/bnb"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="INR"  android:checked="true"
              android:onClick="onRadioButtonClicked"/>
          <RadioButton  android:textColor="@color/white"
              android:id="@+id/usdt"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="USDT(TRC20)"
              android:onClick="onRadioButtonClicked"/>


        </RadioGroup>


        <ImageView
            android:id="@+id/image_qr"
            android:layout_width="match_parent"
            android:layout_height="250dp">
        </ImageView>
        <RelativeLayout
            android:background="#0972C5"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
          <TextView
              android:id="@+id/url_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="150dp"
              android:padding="10dp"
              android:layout_centerVertical="true"
              android:text="Id not found!"
              android:textColor="@color/white"
              android:textIsSelectable="true"
              android:textSize="14dp"
              android:textStyle="bold" />
          <Button android:id="@+id/click_rl"
              android:backgroundTint="#004C88"
              android:layout_alignParentRight="true"
              android:layout_width="150dp"
              android:layout_centerVertical="true"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="Click to Copy!"
              android:textColor="@color/white"
              android:textSize="12dp"
              android:padding="10dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:text="USD Amount"
            android:textColor="@color/golden" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"  android:textColorHint="@color/darkgray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp" android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
          <com.google.android.material.textfield.TextInputEditText
              android:background="@drawable/rounded_edittext_black"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/golden"
              android:hint="Enter USD Amount"

              android:textColorHint="@color/text_grey"
              android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:text="Coin "
            android:textColor="@color/golden" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"  android:textColorHint="@color/darkgray"
            android:layout_width="match_parent"  android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
          <com.google.android.material.textfield.TextInputEditText
              android:background="@drawable/rounded_edittext_black"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/golden"
              android:hint="Enter Coin" android:textColorHint="@color/text_grey"
              android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"

            android:textStyle="bold"
            android:text="Transaction Hash"
            android:textColor="@color/golden" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/darkgray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/txt_et"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/rounded_edittext_black"
              android:hint="Enter Transaction Hash"
              android:singleLine="true"
              android:textColor="@color/golden"
              android:textColorHint="@color/text_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"

            android:textStyle="bold"
            android:text="Receipt"
            android:textColor="@color/golden" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_black"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">
          <ImageView
              android:id="@+id/img_showProfile"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:padding="5dp"
              android:src="@drawable/a4"
              android:scaleType="fitXY"
              />
          <TextView
              android:id="@+id/select_tv"
              android:layout_width="wrap_content"
              android:layout_height="35dp"
              android:layout_centerInParent="true"
              android:text="Choose File"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center_vertical"
              android:background="@drawable/edit_style"
              android:textSize="12dp"
              android:gravity="center_vertical"
              android:paddingRight="30dp"
              android:paddingLeft="30dp"
              android:textColor="@color/white"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_red"
            android:text="Add fund confirmed" android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white" />

      </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="10dp"
          app:cardElevation="5dp" android:visibility="gone"
          android:padding="5dp"  android:id="@+id/otp_ll"
          app:cardBackgroundColor="@color/black"
          android:layout_margin="5dp"
          android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:background="@color/red"
              android:text="OTP Verify (Check your registered mail id for OTP)"
              android:textColor="@color/white"
              android:textSize="12sp" android:textAllCaps="true"
              android:textStyle="bold" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              android:text=" Enter OTP "
              android:layout_marginTop="5dp"
              android:textColor="@color/golden" />
          <com.google.android.material.textfield.TextInputLayout
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"  android:textColorHint="@color/darkgray"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp_et"
                android:background="@drawable/rounded_edittext_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:maxLength="6"
                android:textColor="@color/golden" android:inputType="number"
                android:hint="Enter OTP number"
                android:singleLine="true" />
          </com.google.android.material.textfield.TextInputLayout>
          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/otp_btn"
              android:layout_width="250dp"
              android:layout_gravity="center"
              android:layout_height="40dp"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="20dp"
              android:layout_marginBottom="20dp"
              android:backgroundTint="@color/skyblue"
              android:background="@drawable/rectangle_red"
              android:text="Verify OTP"
              android:textColor="@color/white" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

    </LinearLayout>
  </ScrollView>

</LinearLayout>